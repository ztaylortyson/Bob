<p style="color: green"><%= notice %></p>
<%= link_to "New employee", new_employee_path %>
<h1>Employees</h1>

<div id="employees">
 
  <table class="mytables">
    <tr>
        <th>Count</th>
        <th>Name</th>
        <th>PSA ID</th>
        <th>Employee List ID</th>
        <th>Job Title</th>
        <th>Date of Hire</th>
        <th>Date of Discharge</th>
        <th>Edit</th>
       
    </tr>
    <tr>
      <% count = 1 %>
      <% @employees.each do |employee| %>
          <td><%= count %></td>
          <td><%= link_to "#{employee.full_name}", employee_path(employee), class: "butt round" %></td>
          <td><%= employee.psa_id %></td>
          <td><%= employee.employee_id %></td>
          <td><%= employee.job_title %></td>
          <td><%= employee.doh %></td>
          <td><%= employee.dod %></td>
          <td><%= link_to " ", edit_employee_path(employee), class: "butt round" %></td>
        </tr>
        <% count += 1 %>
      <% end %>
    </table>


</div>


