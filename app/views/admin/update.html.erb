<h1>Update User</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :role %>
    <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] } %>
  </div><br>
  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>
<% end %>